<UserControl x:Class="ModernDesign.MVVM.View.SocialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="519"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <!-- Color Palette -->
        <Color x:Key="AccentPurple">#A78BFA</Color>
        <Color x:Key="AccentPink">#F472B6</Color>
        <Color x:Key="AccentPinkLight">#F9A8D4</Color>
        <Color x:Key="TextPrimary">#FFFFFF</Color>
        <Color x:Key="TextSecondary">#E0E0E0</Color>
        <Color x:Key="TextMuted">#9CA3AF</Color>
        <Color x:Key="CardBackground">#18181840</Color>
        <Color x:Key="CardBorder">#A78BFA60</Color>

        <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurple}"/>
        <SolidColorBrush x:Key="AccentPinkBrush" Color="{StaticResource AccentPink}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>

        <!-- Title Style -->
        <Style x:Key="TitleTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <!-- Body Text Style -->
        <Style x:Key="BodyTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <!-- Social Card Base Style -->
        <Style x:Key="SocialCard" TargetType="Border">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background" Value="#18181840"/>
            <Setter Property="BorderBrush" Value="#A78BFA60"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <TranslateTransform Y="0"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#A78BFA" BlurRadius="16" ShadowDepth="0" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 To="1.03" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 To="1.03" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                                                 To="-4" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity"
                                                 To="0.45" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                                                 To="0" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity"
                                                 To="0.25" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Staff Button Special Style -->
        <Style x:Key="StaffButtonCard" TargetType="Border" BasedOn="{StaticResource SocialCard}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2D1B4E" Offset="0"/>
                        <GradientStop Color="#1E1B3A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#A78BFA" Offset="0"/>
                        <GradientStop Color="#F472B6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#A78BFA" BlurRadius="20" ShadowDepth="0" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Thanks Card Style -->
        <Style x:Key="ThanksCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="22,18"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFFFFF10"/>
            <Setter Property="Background" Value="#18181830"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1.01" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1.01" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Separator -->
        <Style x:Key="SectionSeparator" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="60,10,60,30"/>
            <Setter Property="Opacity" Value="0.15"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#A78BFA" Offset="0.5"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Hidden" 
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly">
            <StackPanel Margin="40,35,40,35">

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- HEADER SECTION -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,45">
                    <TextBlock x:Name="TitleText"
                               Text="Connect with Us" 
                               Style="{StaticResource TitleTextBlock}"
                               FontSize="38"
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#A78BFA" BlurRadius="35" ShadowDepth="0" Opacity="0.45"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="SubtitleText" 
                               Text="Join our community and stay updated with the latest news"
                               Style="{StaticResource BodyTextBlock}"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Opacity="0.65"
                               Margin="0,14,0,0"/>
                </StackPanel>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- SOCIAL CARDS GRID -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <UniformGrid Columns="3" 
                             HorizontalAlignment="Center"
                             Margin="0,0,0,25"
                             MaxWidth="920">

                    <!-- Website Card -->
                    <Border x:Name="WebsiteCard"
                            Height="155" 
                            Style="{StaticResource SocialCard}"
                            Margin="0,0,12,0"
                            MouseLeftButtonUp="WebsiteCard_Click">
                        <Grid>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="🌐" FontSize="46" HorizontalAlignment="Center" Margin="0,0,0,14"/>
                                <TextBlock x:Name="WebsiteTitle"
                                           Text="Website"
                                           Style="{StaticResource TitleTextBlock}"
                                           FontSize="20"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="leuan.zeroauno.com"
                                           Style="{StaticResource BodyTextBlock}"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="#C4B5FD"
                                           Opacity="0.85"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Discord Server Card -->
                    <Border x:Name="DiscordServerCard"
                            Height="155" 
                            Style="{StaticResource SocialCard}"
                            Margin="6,0"
                            MouseLeftButtonUp="DiscordServerCard_Click">
                        <Grid>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="💬" FontSize="46" HorizontalAlignment="Center" Margin="0,0,0,14"/>
                                <TextBlock x:Name="DiscordServerTitle"
                                           Text="Discord Server"
                                           Style="{StaticResource TitleTextBlock}"
                                           FontSize="20"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="DiscordServerDesc"
                                           Text="Join the community"
                                           Style="{StaticResource BodyTextBlock}"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="#C4B5FD"
                                           Opacity="0.85"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Personal Discord Card -->
                    <Border x:Name="PersonalDiscordCard"
                            Height="155" 
                            Style="{StaticResource SocialCard}"
                            Margin="12,0,0,0"
                            MouseLeftButtonUp="PersonalDiscordCard_Click">
                        <Grid>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="👤" FontSize="46" HorizontalAlignment="Center" Margin="0,0,0,14"/>
                                <TextBlock x:Name="PersonalDiscordTitle"
                                           Text="Personal Discord"
                                           Style="{StaticResource TitleTextBlock}"
                                           FontSize="20"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="PersonalDiscordDesc"
                                           Text="leuan"
                                           Style="{StaticResource BodyTextBlock}"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="#C4B5FD"
                                           Opacity="0.85"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </UniformGrid>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- STAFF MEMBERS BUTTON -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <Border x:Name="StaffMembersCard"
                        Height="70"
                        MaxWidth="400"
                        Style="{StaticResource StaffButtonCard}"
                        Margin="0,10,0,40"
                        HorizontalAlignment="Center"
                        MouseLeftButtonUp="StaffMembersCard_Click">
                    <Grid>
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="⭐" FontSize="26" VerticalAlignment="Center" Margin="0,0,14,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="StaffButtonTitle"
                                           Text="Staff Members"
                                           Style="{StaticResource TitleTextBlock}"
                                           FontSize="18"/>
                                <TextBlock x:Name="StaffButtonDesc"
                                           Text="Meet our amazing team"
                                           Style="{StaticResource BodyTextBlock}"
                                           FontSize="11"
                                           Foreground="#C4B5FD"
                                           Opacity="0.8"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <TextBlock Text="→" FontSize="22" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="#A78BFA"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Style="{StaticResource SectionSeparator}"/>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- SPECIAL THANKS SECTION -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,0,0,32">
                        <TextBlock Text="💖" FontSize="34" Margin="0,0,14,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ThanksTitle"
                                   Text="Special Thanks" 
                                   Style="{StaticResource TitleTextBlock}"
                                   FontSize="32"
                                   VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#F472B6" BlurRadius="28" ShadowDepth="0" Opacity="0.4"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <Grid HorizontalAlignment="Center" MaxWidth="920">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <Border Style="{StaticResource ThanksCard}">
                                <StackPanel>
                                    <TextBlock Text="Anadius"
                                               Foreground="#C4B5FD" 
                                               FontFamily="Segoe UI"
                                               FontWeight="SemiBold"
                                               FontSize="17"
                                               Margin="0,0,0,10"/>
                                    <TextBlock x:Name="AnadiusThanks" 
                                               Text="For all the incredible work on DLC unlockers. Rest in peace. 🕊️"
                                               Style="{StaticResource BodyTextBlock}"
                                               FontSize="13"
                                               Opacity="0.8"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource ThanksCard}">
                                <StackPanel>
                                    <TextBlock Text="The Sims Community"
                                               Foreground="#C4B5FD" 
                                               FontFamily="Segoe UI"
                                               FontWeight="SemiBold"
                                               FontSize="17"
                                               Margin="0,0,0,10"/>
                                    <TextBlock x:Name="CommunityThanks" 
                                               Text="For keeping the modding scene alive and thriving."
                                               Style="{StaticResource BodyTextBlock}"
                                               FontSize="13"
                                               Opacity="0.8"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource ThanksCard}">
                                <StackPanel>
                                    <TextBlock Text="All Mod Creators"
                                               Foreground="#C4B5FD" 
                                               FontFamily="Segoe UI"
                                               FontWeight="SemiBold"
                                               FontSize="17"
                                               Margin="0,0,0,10"/>
                                    <TextBlock x:Name="CreatorsThanks" 
                                               Text="Your creativity makes The Sims 4 infinitely better."
                                               Style="{StaticResource BodyTextBlock}"
                                               FontSize="13"
                                               Opacity="0.8"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <Border Style="{StaticResource ThanksCard}">
                                <StackPanel>
                                    <TextBlock Text="Beta Testers"
                                               Foreground="#C4B5FD" 
                                               FontFamily="Segoe UI"
                                               FontWeight="SemiBold"
                                               FontSize="17"
                                               Margin="0,0,0,10"/>
                                    <TextBlock x:Name="TestersThanks" 
                                               Text="For finding bugs and suggesting improvements."
                                               Style="{StaticResource BodyTextBlock}"
                                               FontSize="13"
                                               Opacity="0.8"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource ThanksCard}">
                                <StackPanel>
                                    <TextBlock Text="Discord Members"
                                               Foreground="#C4B5FD" 
                                               FontFamily="Segoe UI"
                                               FontWeight="SemiBold"
                                               FontSize="17"
                                               Margin="0,0,0,10"/>
                                    <TextBlock x:Name="DiscordThanks" 
                                               Text="For being an amazing and supportive community."
                                               Style="{StaticResource BodyTextBlock}"
                                               FontSize="13"
                                               Opacity="0.8"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource ThanksCard}">
                                <StackPanel>
                                    <TextBlock x:Name="YouTitle"
                                               Text="You! 💜"
                                               Foreground="#F9A8D4" 
                                               FontFamily="Segoe UI"
                                               FontWeight="SemiBold"
                                               FontSize="17"
                                               Margin="0,0,0,10"/>
                                    <TextBlock x:Name="YouThanks" 
                                               Text="For using this tool and supporting the project."
                                               Style="{StaticResource BodyTextBlock}"
                                               FontSize="13"
                                               Opacity="0.8"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- FOOTER -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <TextBlock x:Name="FooterText" 
                           Text="Made with 💜 by Leuan"
                           Style="{StaticResource BodyTextBlock}"
                           FontSize="13"
                           Foreground="{StaticResource TextMutedBrush}"
                           Opacity="0.55"
                           HorizontalAlignment="Center"
                           Margin="0,45,0,0"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>