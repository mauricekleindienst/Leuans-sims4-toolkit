<Window x:Class="ModernDesign.Sims3Downloader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sims 3 Installation Mode"
        MinHeight="600" MinWidth="700"
        Height="600" Width="700"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Hexagon Card Style -->
        <Style x:Key="HexCard" TargetType="Grid">
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                           To="1.05" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                           To="1.05" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                           To="1.0" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                           To="1.0" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="50">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EF4444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Grid>
        <!-- Background with Plumbob Pattern -->
        <Border CornerRadius="16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A0E27" Offset="0"/>
                    <GradientStop Color="#1A1F3A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#00D9FF" BlurRadius="50" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
        </Border>

        <!-- Decorative Circles -->
        <Canvas>
            <Ellipse Width="150" Height="150" Canvas.Left="-75" Canvas.Top="-75" Opacity="0.05">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#00D9FF" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="200" Height="200" Canvas.Right="-100" Canvas.Bottom="-100" Opacity="0.05">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#00FF87" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Plumbob -->
            <Grid Grid.Row="0" MouseLeftButtonDown="Header_MouseLeftButtonDown" Margin="15,10,15,0">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Plumbob Icon -->
                    <TextBlock Text="◆" FontSize="24" Foreground="#00FF87" 
                               HorizontalAlignment="Center" FontWeight="Bold"
                               Margin="0,0,0,4">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00FF87" BlurRadius="20" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="TitleText"
                               Text="Choose Your Installation Path"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,4"/>

                    <TextBlock x:Name="SubtitleText"
                               Text="Select how you want to enhance your Sims 3 experience"
                               FontSize="11"
                               Foreground="#94A3B8"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <Button x:Name="CloseBtn"
                        Content="✕"
                        Style="{StaticResource CloseButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,5,5,0"
                        Click="CloseBtn_Click"/>
            </Grid>

            <!-- Cards Container - CENTERED 2 CARDS -->
            <Grid Grid.Row="1" Margin="40,10,40,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- AUTOMATIC CARD -->
                <Grid Grid.Column="0"
                      x:Name="AutomaticCard"
                      Style="{StaticResource HexCard}"
                      MouseLeftButtonDown="AutomaticBtn_Click">
                    <Grid.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Grid.RenderTransform>

                    <Border CornerRadius="12" Background="#1E293B">
                        <Border.Effect>
                            <DropShadowEffect Color="#3B82F6" BlurRadius="0" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Top Section with Icon -->
                            <Border Grid.Row="0" CornerRadius="12,12,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#3B82F6" Offset="0"/>
                                        <GradientStop Color="#1E40AF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <TextBlock Text="🚀" FontSize="56"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Bottom Section with Text -->
                            <StackPanel Grid.Row="1" Margin="15,12" VerticalAlignment="Center">
                                <TextBlock x:Name="AutomaticTitle"
                                           Text="Automatic"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>

                                <TextBlock x:Name="AutomaticDesc"
                                           Text="Let us handle everything for you"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           LineHeight="16"/>

                                <Border Background="#3B82F6" 
                                        CornerRadius="6"
                                        Padding="10,5"
                                        HorizontalAlignment="Center"
                                        Margin="0,12,0,0">
                                    <TextBlock Text="DEVELOPER MODE ONLY" 
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- MANUAL CARD -->
                <Grid Grid.Column="2"
                      x:Name="ManualCard"
                      Style="{StaticResource HexCard}"
                      MouseLeftButtonDown="ManualBtn_Click">
                    <Grid.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Grid.RenderTransform>

                    <Border CornerRadius="12" Background="#1E293B">
                        <Border.Effect>
                            <DropShadowEffect Color="#EF4444" BlurRadius="0" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Top Section with Icon -->
                            <Border Grid.Row="0" CornerRadius="12,12,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#EF4444" Offset="0"/>
                                        <GradientStop Color="#DC2626" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <TextBlock Text="🛠️" FontSize="56"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Bottom Section with Text -->
                            <StackPanel Grid.Row="1" Margin="15,12" VerticalAlignment="Center">
                                <TextBlock x:Name="ManualTitle"
                                           Text="Manual"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>

                                <TextBlock x:Name="ManualDesc"
                                           Text="Complete control over every detail"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           LineHeight="16"/>

                                <Border Background="#EF4444" 
                                        CornerRadius="6"
                                        Padding="10,5"
                                        HorizontalAlignment="Center"
                                        Margin="0,12,0,0">
                                    <TextBlock Text="AVAILABLE FOR ALL" 
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#0A0E27" CornerRadius="0,0,16,16" Opacity="0.5" Height="40">
                <TextBlock Text="💎 Leuan's Sims 3 ToolKit" 
                           FontSize="11"
                           Foreground="#64748B"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>