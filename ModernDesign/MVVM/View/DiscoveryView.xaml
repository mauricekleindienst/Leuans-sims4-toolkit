                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Width="32" Height="32" CornerRadius="6" 
                                        Background="#065F46" BorderBrush="#10B981" BorderThickness="1" Margin="0,0,6,0">
                                    <TextBlock Text="🎭" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="1" x:Name="BlenderTitle" Text="3D with Blender" 
                                          Style="{StaticResource TitleTextBlock}" FontSize="11" VerticalAlignment="Center"/>
                            </Grid>

                            <TextBlock Grid.Row="1" x:Name="BlenderDesc" 
                                      Text="Custom meshes" 
                                      Style="{StaticResource BodyTextBlock}" FontSize="9" VerticalAlignment="Top"/>
                        </Grid>
                    </Border>

                    <!-- Scripting Card -->
                    <Border x:Name="ScriptingCard" Width="145" Height="105" CornerRadius="8" Margin="4" Style="{StaticResource GuideCard}" MouseLeftButtonUp="ScriptingCard_Click">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Width="32" Height="32" CornerRadius="6" 
                                        Background="#065F46" BorderBrush="#10B981" BorderThickness="1" Margin="0,0,6,0">
                                    <TextBlock Text="💻" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="1" x:Name="ScriptingTitle" Text="Python Scripts" 
                                          Style="{StaticResource TitleTextBlock}" FontSize="11" VerticalAlignment="Center"/>
                            </Grid>

                            <TextBlock Grid.Row="1" x:Name="ScriptingDesc" 
                                      Text="Script mods basics" 
                                      Style="{StaticResource BodyTextBlock}" FontSize="9" VerticalAlignment="Top"/>
                        </Grid>
                    </Border>

                    <!-- Tuning Card -->
                    <Border x:Name="TuningCard" Width="145" Height="105" CornerRadius="8" Margin="4" Style="{StaticResource GuideCard}" MouseLeftButtonUp="TuningCard_Click">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Width="32" Height="32" CornerRadius="6" 
                                        Background="#065F46" BorderBrush="#10B981" BorderThickness="1" Margin="0,0,6,0">
                                    <TextBlock Text="⚙️" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="1" x:Name="TuningTitle" Text="XML Tuning" 
                                          Style="{StaticResource TitleTextBlock}" FontSize="11" VerticalAlignment="Center"/>
