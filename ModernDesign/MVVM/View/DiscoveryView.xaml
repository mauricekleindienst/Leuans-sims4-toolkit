                <!-- SECTION: TROUBLESHOOTING -->
                <TextBlock x:Name="TroubleshootTitle" Text="TROUBLESHOOTING" Style="{StaticResource BodyTextBlock}" Foreground="#F9A8D4" FontSize="9" FontWeight="SemiBold" Margin="0,0,0,8" TextAlignment="Center"/>
                <WrapPanel HorizontalAlignment="Center">
                    <!-- Fix Errors Card -->
                    <Border x:Name="FixErrorsCard" Width="295" Height="80" CornerRadius="8" Style="{StaticResource GuideCard}" Margin="4" MouseLeftButtonUp="FixErrorsCard_Click">
                        <Grid Margin="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="36" Height="36" CornerRadius="8" Margin="0,0,12,0"
                                    Background="#9F1239" BorderBrush="#F43F5E" BorderThickness="1">
                                <TextBlock Text="❌" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="FixErrorsTitle" Text="Fix Common Errors" Style="{StaticResource TitleTextBlock}" FontSize="13"/>
                                <TextBlock x:Name="FixErrorsDesc" Text="LastException, broken mods, game crashes" Style="{StaticResource BodyTextBlock}" FontSize="10" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

