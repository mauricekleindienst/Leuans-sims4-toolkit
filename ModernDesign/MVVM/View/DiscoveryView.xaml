                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="FixStarIconTitle" Text="Fix Star/New Icon" Style="{StaticResource TitleTextBlock}" FontSize="13"/>
                                <TextBlock x:Name="FixStarIconDesc" Text="Fix the permanent star of new items in build mode" Style="{StaticResource BodyTextBlock}" FontSize="10" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- ================== OVERLAY LECCIONES ================== -->
        <Grid x:Name="BeginnerGuideOverlay" Background="#BF020617" Visibility="Collapsed">
            <Grid.RenderTransform>
                <ScaleTransform x:Name="BeginnerOverlayScale" ScaleX="0.95" ScaleY="0.95"/>
            </Grid.RenderTransform>

            <Border CornerRadius="16" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="750" MaxHeight="500">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#020617" Offset="0"/>
                        <GradientStop Color="#111827" Offset="0.4"/>
                        <GradientStop Color="#4F46E5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="✕" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Background="#EF4444" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="CloseBeginnerGuideOverlay_Click"/>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,10,0">
                        <StackPanel VerticalAlignment="Top">
                            <TextBlock x:Name="LessonIndicator" Text="Lesson 1 of 8" Style="{StaticResource BodyTextBlock}" FontSize="9" Foreground="#A78BFA" Margin="0,0,0,3"/>
                            <TextBlock x:Name="LessonTitleText" Text="Lesson 1: Mods folder" Style="{StaticResource TitleTextBlock}" FontSize="15" Margin="0,0,0,3"/>
                            <TextBlock x:Name="LessonIntroText" Text="" Style="{StaticResource BodyTextBlock}" FontSize="10" Margin="0,0,0,8"/>

                            <StackPanel x:Name="LessonContentPanel" Margin="0,3,0,0"/>

                            <Border x:Name="OverlayStatusBorder" CornerRadius="8" Padding="8" Margin="0,3,0,0" Background="#111827" Visibility="Collapsed">
                                <TextBlock x:Name="OverlayStatusText" Text="" Foreground="#F97373" FontFamily="Bahnschrift Light" FontWeight="Bold" FontSize="10" TextWrapping="Wrap"/>
                            </Border>

                            <StackPanel x:Name="Lesson1ButtonsPanel" Orientation="Horizontal" Margin="0,5,0,0" Visibility="Collapsed">
                                <Button x:Name="OverlayFixButton" Content="Fix" Margin="0,0,6,0" Padding="6,3" Background="#EF4444" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="OverlayFixButton_Click" Visibility="Collapsed"/>
                                <Button x:Name="OverlaySelectFolderButton" Content="Not your folder?" Margin="0,0,0,0" Padding="6,3" Background="#6366F1" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="OverlaySelectFolderButton_Click"/>
                            </StackPanel>

                            <StackPanel x:Name="LinksPanel" Margin="0,8,0,0" Visibility="Collapsed">
                                <TextBlock x:Name="BeginnerLinksTitle" Text="Recommended links" Style="{StaticResource TitleTextBlock}" FontSize="11" Margin="0,0,0,3"/>
                                <StackPanel x:Name="LinksContainer"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <Grid Grid.Column="1" Margin="0,15,0,0">
                        <Border CornerRadius="12" Background="#020617" Padding="10">
                            <Grid>
                                <Image x:Name="GuideScreenshotImage" Source="/Assets/Discovery/mods_folder_example.png" Stretch="Uniform" Margin="0"/>
                                <Border x:Name="ZoomBorder" BorderBrush="#22C55E" BorderThickness="2" CornerRadius="8" HorizontalAlignment="Right" VerticalAlignment="Top" Width="130" Height="75" Margin="0,8,8,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.8" Color="#22C55E"/>
                                    </Border.Effect>
                                </Border>
                                <TextBlock x:Name="ArrowText" Text="⟶" FontSize="32" FontWeight="Bold" Foreground="#F9FAFB" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform Angle="-20"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <Border x:Name="ZoomLabelBorder" Background="#22C55E" CornerRadius="10" Padding="6,3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,90,8,0">
                                    <TextBlock x:Name="BeginnerZoomLabel" Text="Here is your Mods folder" Foreground="#031314" FontWeight="Bold" FontSize="9"/>
                                </Border>
                            </Grid>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,8,0,0">
                            <Button x:Name="OverlayPrevButton" Content="Back" Margin="0,0,6,0" Padding="8,5" Cursor="Hand" Background="#111827" Foreground="#E5E7EB" BorderThickness="0" Click="OverlayPrevButton_Click" Visibility="Collapsed"/>
                            <Button x:Name="OverlayNextButton" Content="Next lesson" Margin="0,0,6,0" Padding="8,5" Cursor="Hand" Background="#22C55E" Foreground="#022C22" FontWeight="Bold" BorderThickness="0" Click="OverlayNextButton_Click"/>
                            <Button x:Name="BeginnerCloseButton" Content="Close" Padding="8,5" Cursor="Hand" Background="#111827" Foreground="#E5E7EB" BorderThickness="0" Click="CloseBeginnerGuideOverlay_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
