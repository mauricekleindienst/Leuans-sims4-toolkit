                </WrapPanel>

                <!-- SECTION: CREATE YOUR OWN -->
                <TextBlock x:Name="CreateModsTitle" Text="CREATE YOUR OWN" Style="{StaticResource BodyTextBlock}" Foreground="#10B981" FontSize="9" FontWeight="SemiBold" Margin="0,0,0,8" TextAlignment="Center"/>
