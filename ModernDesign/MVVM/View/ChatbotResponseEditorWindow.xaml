<Window x:Class="ModernDesign.ChatbotResponseEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        Title="Edit Response"
        Width="600" Height="550"
        MinWidth="600" MinHeight="550"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="60"
            ResizeBorderThickness="6"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="SurfaceLightBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0E1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#475569"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="0" Opacity="0.7"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="16,16,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <TextBlock Text="✏️" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock x:Name="TitleText" Text="Edit Chatbot Response" 
                                   Foreground="White" FontSize="18" FontWeight="Bold" FontFamily="Bahnschrift Light"/>
                    </StackPanel>

                    <Button Content="✕" 
                            Width="32" Height="32"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="16"
                                                    Width="32" Height="32">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>

                    <!-- Keywords -->
                    <TextBlock x:Name="KeywordsLabel" Text="Keywords (separated by |)" 
                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="KeywordsTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                    <!-- Response ES -->
                    <TextBlock x:Name="ResponseESLabel" Text="Response (Spanish)" 
                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="ResponseESTextBox" Style="{StaticResource ModernTextBox}" 
                             TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60" MaxHeight="120" Margin="0,0,0,15"/>

                    <!-- Response EN -->
                    <TextBlock x:Name="ResponseENLabel" Text="Response (English)" 
                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="ResponseENTextBox" Style="{StaticResource ModernTextBox}" 
                             TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60" MaxHeight="120" Margin="0,0,0,15"/>

                    <!-- Action -->
                    <TextBlock x:Name="ActionLabel" Text="Action" 
                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ActionComboBox" 
                              Background="#FF0B0B0C" 
                              Foreground="#FF171414"
                              BorderBrush="#475569"
                              FontSize="13"
                              FontFamily="Bahnschrift Light"
                              Margin="0,0,0,10" Opacity="0.8">
                        <ComboBoxItem Content="(None - Text Only)" Tag=""/>
                        <ComboBoxItem Content="Open DLC Updater" Tag="OPEN_DLC_UPDATER"/>
                        <ComboBoxItem Content="Open DLC Unlocker" Tag="OPEN_DLC_UNLOCKER"/>
                        <ComboBoxItem Content="Update Game" Tag="UPDATE_GAME"/>
                        <ComboBoxItem Content="Crack Game" Tag="CRACK_GAME"/>
                        <ComboBoxItem Content="Download Base Game" Tag="DOWNLOAD_BASEGAME"/>
                        <ComboBoxItem Content="Mod Manager" Tag="MOD_MANAGER"/>
                        <ComboBoxItem Content="Loading Screen" Tag="LOADING_SCREEN"/>
                        <ComboBoxItem Content="Cheats Guide" Tag="CHEATS_GUIDE"/>
                        <ComboBoxItem Content="Gameplay Enhancer" Tag="GAMEPLAY_ENHANCER"/>
                        <ComboBoxItem Content="Auto Extract DLCs" Tag="AUTOEXTRACT_DLCS"/>
                        <ComboBoxItem Content="Repair Game" Tag="REPAIR_GAME"/>
                        <ComboBoxItem Content="Change Language" Tag="CHANGE_LANGUAGE"/>
                        <ComboBoxItem Content="Game Tweaker" Tag="GAME_TWEAKER"/>
                        <ComboBoxItem Content="Screenshot Manager" Tag="SCREENSHOT_MANAGER"/>
                        <ComboBoxItem Content="Music Manager" Tag="MUSIC_MANAGER"/>
                        <ComboBoxItem Content="Savegame Manager" Tag="SAVEGAME_MANAGER"/>
                        <ComboBoxItem Content="Learn Modding" Tag="LEARN_MODDING"/>
                        <ComboBoxItem Content="Fix Common Errors" Tag="FIX_COMMON"/>
                        <ComboBoxItem Content="Method 50/50" Tag="METHOD50_50"/>
                        <ComboBoxItem Content="Open URL (Custom)" Tag="OPEN_URL:"/>
                    </ComboBox>

                    <!-- Custom URL (solo visible si se selecciona OPEN_URL) -->
                    <TextBlock x:Name="CustomURLLabel" Text="Custom URL" 
                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="Bold" 
                               Margin="0,0,0,5" Visibility="Collapsed"/>
                    <TextBox x:Name="CustomURLTextBox" Style="{StaticResource ModernTextBox}" 
                             Margin="0,0,0,15" Visibility="Collapsed"/>

                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER -->
            <Border Grid.Row="2" Background="{StaticResource SurfaceLightBrush}" Padding="20" CornerRadius="0,0,16,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="SaveButton" Content="Save" Width="120" Margin="5" Click="SaveButton_Click" Style="{StaticResource ModernButton}"/>
                    <Button x:Name="CancelButton" Content="Cancel" Width="120" Margin="5" Click="CancelButton_Click" Style="{StaticResource ModernButton}" Background="#475569"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
