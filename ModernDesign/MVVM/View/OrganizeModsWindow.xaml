<Window x:Class="ModernDesign.MVVM.View.OrganizeModsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mod Manager" 
        Height="600" Width="850"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
        </Style>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="TitleText" Text="📁 Mod Manager" Style="{StaticResource TitleStyle}" FontSize="24"/>
            <TextBlock x:Name="SubtitleText" Text="Manage, enable, disable or delete your mods" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- FOLDER PATH + BUTTONS -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#1E293B" CornerRadius="8" Padding="10,8">
                <TextBlock x:Name="ModsFolderPathText" Text="No folder selected" Style="{StaticResource BodyStyle}" FontSize="11" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
            </Border>
            <Button x:Name="SelectFolderButton" Grid.Column="1" Content="📂 Select Folder" Style="{StaticResource ActionButton}" Background="#6366F1" Foreground="White" Click="SelectFolderButton_Click" Margin="8,0,0,0"/>
            <Button x:Name="RefreshButton" Grid.Column="2" Content="🔄 Refresh" Style="{StaticResource ActionButton}" Background="#0891B2" Foreground="White" Click="RefreshButton_Click"/>
        </Grid>

        <!-- SEARCH BAR -->
        <Border Grid.Row="2" Background="#1E293B" CornerRadius="8" Padding="10,8" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="🔍" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="SearchBox" Grid.Column="1" Background="Transparent" Foreground="#E5E7EB" BorderThickness="0" FontFamily="Bahnschrift Light" FontSize="12" VerticalAlignment="Center" TextChanged="SearchBox_TextChanged"/>
                <TextBlock x:Name="SearchPlaceholder" Grid.Column="1" Text="Search mods..." Style="{StaticResource BodyStyle}" FontSize="12" Opacity="0.5" VerticalAlignment="Center" IsHitTestVisible="False" Margin="0,0,0,0"/>
                <Button x:Name="ClearSearchButton" Grid.Column="2" Content="✕" Background="Transparent" Foreground="#9CA3AF" BorderThickness="0" Cursor="Hand" FontSize="14" Padding="8,4" Click="ClearSearchButton_Click" Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- WARNING BANNER FOR SCRIPTS IN SUBFOLDERS -->
        <Border x:Name="ScriptWarningBanner" Grid.Row="3" Background="#DC2626" CornerRadius="10" Padding="15,12" Margin="0,0,0,15" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="⚠️" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="ScriptWarningTitle" Text="Scripts in subfolders detected!" Style="{StaticResource TitleStyle}" FontSize="14"/>
                    <TextBlock x:Name="ScriptWarningDesc" Text="Some .ts4script files are in subfolders and probably won't work" Style="{StaticResource BodyStyle}" FontSize="11" Opacity="0.9" Margin="0,2,0,0"/>
                </StackPanel>

                <Button x:Name="FixScriptsButton" Grid.Column="2" Content="Fix Now" Background="#FBBF24" Foreground="#0F172A" Padding="15,8" BorderThickness="0" Cursor="Hand" FontWeight="Bold" FontFamily="Bahnschrift Light" FontSize="12" Click="FixScriptsButton_Click" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- STATS BAR -->
        <Border Grid.Row="4" Background="#111827" CornerRadius="12" Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Stats -->
                <Border Grid.Row="0" Background="#1E293B" CornerRadius="10,10,0,0" Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TotalModsText" Text="Total: 0" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,0,20,0"/>
                        <TextBlock x:Name="ActiveModsText" Text="Active: 0" Style="{StaticResource BodyStyle}" FontSize="12" Foreground="#22C55E" Margin="0,0,20,0"/>
                        <TextBlock x:Name="DisabledModsText" Text="Disabled: 0" Style="{StaticResource BodyStyle}" FontSize="12" Foreground="#F97316" Margin="0,0,20,0"/>
                        <TextBlock x:Name="PackagesText" Text="Packages: 0" Style="{StaticResource BodyStyle}" FontSize="12" Foreground="#38BDF8" Margin="0,0,20,0"/>
                        <TextBlock x:Name="ScriptsText" Text="Scripts: 0" Style="{StaticResource BodyStyle}" FontSize="12" Foreground="#A78BFA"/>
                    </StackPanel>
                </Border>

                <!-- MODS LIST -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                    <ItemsControl x:Name="ModsListPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E293B" CornerRadius="10" Margin="0,0,0,8" Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Mod Info -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DisplayName}" FontSize="14" FontWeight="Bold" Foreground="#F9FAFB" FontFamily="Bahnschrift Light"/>
                                                <Border Background="{Binding StatusColor}" CornerRadius="8" Padding="6,2" Margin="8,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding StatusText}" FontSize="9" Foreground="#0F172A" FontWeight="Bold" FontFamily="Bahnschrift Light"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding TypeInfo}" FontSize="10" Foreground="#9CA3AF" FontFamily="Bahnschrift Light"/>
                                                <TextBlock Text=" • " FontSize="10" Foreground="#6B7280" FontFamily="Bahnschrift Light"/>
                                                <TextBlock Text="{Binding FileSizeText}" FontSize="10" Foreground="#9CA3AF" FontFamily="Bahnschrift Light"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding RelativePath}" FontSize="9" Foreground="#6B7280" FontFamily="Bahnschrift Light" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="{Binding ToggleButtonText}" Background="{Binding ToggleButtonColor}" Foreground="White" Padding="10,6" Margin="0,0,6,0" BorderThickness="0" Cursor="Hand" FontWeight="Bold" FontFamily="Bahnschrift Light" FontSize="11" Click="ToggleModButton_Click" Tag="{Binding}"/>
                                            <Button x:Name="DeleteButton" Content="🗑️" Background="#EF4444" Foreground="White" Padding="10,6" BorderThickness="0" Cursor="Hand" FontSize="11" Click="DeleteModButton_Click" Tag="{Binding}" ToolTip="{Binding DeleteTooltip}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyStatePanel" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
                    <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="EmptyStateTitle" Text="No mods found" Style="{StaticResource TitleStyle}" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock x:Name="EmptyStateDesc" Text="Select your Mods folder to scan for mods" Style="{StaticResource BodyStyle}" FontSize="12" HorizontalAlignment="Center" Opacity="0.7"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- FOOTER -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="CloseButton" Content="Close" Style="{StaticResource ActionButton}" Background="#374151" Foreground="White" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>