<Window x:Class="ModernDesign.MVVM.View.LegitInstallTutorialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Legit Installation Tutorial"
        Height="600" Width="700"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Icono_TLK.ico">

    <Border Background="#1E293B" CornerRadius="12" BorderBrush="#22C55E" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="HeaderText"
                           Text=" Legit Installation Guide"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#22C55E"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="SubHeaderText"
                           Text="Follow these steps to install The Sims 4 legitimately"
                           FontSize="12"
                           Foreground="#94A3B8"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Decorative Line -->
            <Border Grid.Row="1" Height="2" Background="#334155" CornerRadius="1" Margin="0,0,0,20"/>

            <!-- Tutorial Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Step 1 -->
                    <Border Background="#10FFFFFF" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock x:Name="Step1Title" Text="📥 Step 1: Download the Base Game" 
                                       FontSize="16" FontWeight="Bold" Foreground="#22C55E" Margin="0,0,0,10"/>
                            <TextBlock x:Name="Step1Description" TextWrapping="Wrap" Foreground="#E5E7EB" FontSize="13" LineHeight="20">
                                <Run Text="Download The Sims 4 base game from one of these official platforms:"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="• Steam: " FontWeight="Bold"/>
                                <Run Text="Search for 'The Sims 4' in the Steam store"/>
                                <LineBreak/>
                                <Run Text="• EA App: " FontWeight="Bold"/>
                                <Run Text="Download from the official EA App"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="⚠️ Make sure to download and install the complete base game before continuing." Foreground="#F59E0B"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Step 2 -->
                    <Border Background="#10FFFFFF" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock x:Name="Step2Title" Text="🎁 Step 2: Download DLCs with This Toolkit" 
                                       FontSize="16" FontWeight="Bold" Foreground="#3EC7E8" Margin="0,0,0,10"/>
                            <TextBlock x:Name="Step2Description" TextWrapping="Wrap" Foreground="#E5E7EB" FontSize="13" LineHeight="20">
                                <Run Text="Once you have the base game installed:"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="1. " FontWeight="Bold"/>
                                <Run Text="Use this toolkit to download all DLCs for free"/>
                                <LineBreak/>
                                <Run Text="2. " FontWeight="Bold"/>
                                <Run Text="The toolkit will handle the download and installation"/>
                                <LineBreak/>
                                <Run Text="3. " FontWeight="Bold"/>
                                <Run Text="All DLCs will be added to your game automatically"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Step 3 -->
                    <Border Background="#10FFFFFF" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock x:Name="Step3Title" Text="🔓 Step 3: Activate DLCs with DLC Unlocker" 
                                       FontSize="16" FontWeight="Bold" Foreground="#A78BFA" Margin="0,0,0,10"/>
                            <TextBlock x:Name="Step3Description" TextWrapping="Wrap" Foreground="#E5E7EB" FontSize="13" LineHeight="20">
                                <Run Text="After downloading the DLCs:"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="• Use the built-in DLC Unlocker feature in this toolkit"/>
                                <LineBreak/>
                                <Run Text="• It will automatically activate all downloaded DLCs"/>
                                <LineBreak/>
                                <Run Text="• Launch the game and enjoy all content!"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Video Tutorial -->
                    <Border Background="#10FFFFFF" CornerRadius="10" Padding="20" BorderBrush="#FBBF24" BorderThickness="2">
                        <StackPanel>
                            <TextBlock x:Name="VideoTitle" Text="📺 Watch Video Tutorial" 
                                       FontSize="16" FontWeight="Bold" Foreground="#FBBF24" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock x:Name="VideoDescription" 
                                       Text="For a detailed step-by-step guide, watch our video tutorial:"
                                       TextWrapping="Wrap" Foreground="#E5E7EB" FontSize="12" 
                                       TextAlignment="Center" Margin="0,0,0,15"/>

                            <Button x:Name="VideoBtn" Content="🎬 Open YouTube Tutorial" Height="45"
                                    Background="#FBBF24" Foreground="#0F172A" FontWeight="Bold"
                                    FontSize="14" Cursor="Hand" Click="VideoBtn_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                                CornerRadius="8" Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bg" Property="Background" Value="#F59E0B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Close Button -->
            <Button x:Name="CloseBtn" Grid.Row="3" Content=" Got It!" Height="45" Margin="0,20,0,0"
                    Background="#22C55E" Foreground="White" FontWeight="Bold"
                    FontSize="14" Cursor="Hand" Click="CloseBtn_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="15,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#16A34A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>