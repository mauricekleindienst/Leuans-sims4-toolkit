<Window x:Class="ModernDesign.Sims3Updater"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sims 3 Automatic Installer"
        MinHeight="600" MinWidth="800"
        Height="650" Width="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Close Button -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="50">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EF4444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#3B82F6" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#64748B"/>
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#64748B"/>
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Warning Button Style -->
        <Style x:Key="WarningButton" TargetType="Button">
            <Setter Property="Background" Value="#F59E0B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#F59E0B" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#64748B"/>
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Pause Button Style -->
        <Style x:Key="PauseButton" TargetType="Button">
            <Setter Property="Background" Value="#F59E0B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#F59E0B" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#64748B"/>
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#EF4444" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#64748B"/>
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Grid>
        <!-- Background -->
        <Border CornerRadius="16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A0E27" Offset="0"/>
                    <GradientStop Color="#1A1F3A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#00D9FF" BlurRadius="50" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
        </Border>

        <!-- Decorative Circles -->
        <Canvas>
            <Ellipse Width="150" Height="150" Canvas.Left="-75" Canvas.Top="-75" Opacity="0.05">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#00D9FF" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="200" Height="200" Canvas.Right="-100" Canvas.Bottom="-100" Opacity="0.05">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#00FF87" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" MouseLeftButtonDown="Header_MouseLeftButtonDown" Margin="15,10,15,0">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="◆" FontSize="24" Foreground="#00FF87" 
                               HorizontalAlignment="Center" FontWeight="Bold"
                               Margin="0,0,0,4">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00FF87" BlurRadius="20" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="TitleText"
                               Text="The Sims 3 - Automatic Installer"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,4"/>

                    <TextBlock x:Name="SubtitleText"
                               Text="Complete Collection + All Store Items"
                               FontSize="12"
                               Foreground="#94A3B8"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>

                <Button x:Name="CloseBtn"
                        Content="✕"
                        Style="{StaticResource CloseButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,5,5,0"
                        Click="CloseBtn_Click"/>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="40,20,40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Main Download Buttons -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button x:Name="DownloadBtn"
                            Style="{StaticResource ActionButton}"
                            Margin="5"
                            Click="DownloadBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="DownloadBtnText" Text="⬇️ Download &amp; Install" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock x:Name="DownloadBtnSize" Text="(~50 GB)" FontSize="14" VerticalAlignment="Center" Opacity="0.8"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="ResumeBtn"
                            Style="{StaticResource ActionButton}"
                            Margin="5"
                            Click="ResumeBtn_Click"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="ResumeBtnText" Text="▶️ Resume Download" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="PauseBtn"
                            Style="{StaticResource PauseButton}"
                            Margin="5"
                            Click="PauseBtn_Click"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="PauseBtnText" Text="⏸️ Pause" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="CancelBtn"
                            Style="{StaticResource CancelButton}"
                            Margin="5"
                            Click="CancelBtn_Click"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="CancelBtnText" Text="❌ Cancel" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Log ScrollViewer -->
                <Border Grid.Row="1" 
                        Background="#1E293B" 
                        CornerRadius="12" 
                        Padding="15"
                        BorderBrush="#334155"
                        BorderThickness="1">
                    <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="LogTextBlock"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   Foreground="#10B981"
                                   TextWrapping="Wrap"
                                   LineHeight="18"/>
                    </ScrollViewer>
                </Border>

                <!-- Action Buttons Panel -->
                <StackPanel x:Name="ActionButtonsPanel" 
                            Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0"
                            Visibility="Collapsed">

                    <Button x:Name="StoreItemsBtn"
                            Style="{StaticResource SecondaryButton}"
                            Margin="5"
                            Click="StoreItemsBtn_Click"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🛍️ " FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock x:Name="StoreItemsBtnText" Text="Download Store Items" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="CreateShortcutBtn"
                            Style="{StaticResource SecondaryButton}"
                            Margin="5"
                            Click="CreateShortcutBtn_Click"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔗 " FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock x:Name="CreateShortcutBtnText" Text="Create Desktop Shortcut" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="AddRegistryBtn"
                            Style="{StaticResource WarningButton}"
                            Margin="5"
                            Click="AddRegistryBtn_Click"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️ " FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock x:Name="AddRegistryBtnText" Text="Add Registry (REQUIRED)" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#0A0E27" CornerRadius="0,0,16,16" Opacity="0.5" Height="40">
                <TextBlock Text="💎 Leuan's Sims 3 ToolKit - Developer Mode" 
                           FontSize="11"
                           Foreground="#64748B"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>