<Window x:Class="ModernDesign.MVVM.View.AnnouncementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Announcement"
        Height="580" Width="520"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Estilo para el botón de cerrar -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#475569"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#64748B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#334155"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para el botón de settings -->
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <TextBlock Text="⚙️" 
                                      FontSize="20"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFFFFF20"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFFFFF30"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para toggle switches -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ContentPresenter Grid.Column="0" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0"/>

                            <Border Grid.Column="1"
                                   x:Name="SwitchBorder"
                                   Width="48"
                                   Height="26"
                                   Background="#475569"
                                   CornerRadius="13"
                                   VerticalAlignment="Center">
                                <Ellipse x:Name="SwitchThumb"
                                        Width="20"
                                        Height="20"
                                        Fill="White"
                                        HorizontalAlignment="Left"
                                        Margin="3,0,0,0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="#6366F1"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="22"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="0"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder"
            CornerRadius="16" 
            Background="#0F172A"
            BorderBrush="#1E293B"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" 
                            ShadowDepth="0" 
                            Color="#000000"
                            Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- VISTA NORMAL DEL ANUNCIO -->
            <Grid x:Name="AnnouncementView">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        Background="#1E293B"
                        CornerRadius="16,16,0,0"
                        Padding="20,24">

                    <Grid>
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">

                            <!-- Logo opcional -->
                            <Border x:Name="LogoBorder"
                                    Width="36"
                                    Height="36"
                                    CornerRadius="8"
                                    Background="#FFFFFF15"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                                <Image x:Name="LogoImage"
                                       Margin="6"
                                       Stretch="Uniform"/>
                            </Border>

                            <!-- Título -->
                            <TextBlock x:Name="HeaderText"
                                      Text="📢 Announcement"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Botón de Settings -->
                        <Button x:Name="SettingsButton"
                                Style="{StaticResource SettingsButtonStyle}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Click="SettingsButton_Click"/>
                    </Grid>
                </Border>

                <!-- Content área -->
                <!-- Content área -->
                <Grid Grid.Row="1" Margin="24,20,24,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Imagen del anuncio -->
                    <Border Grid.Row="0"
            x:Name="ImageBorder"
            Background="#1E293B"
            CornerRadius="12"
            Margin="0,0,0,16"
            BorderBrush="#334155"
            BorderThickness="1"
            Visibility="Collapsed">
                        <Image x:Name="AnnouncementImage"
               MaxHeight="180"
               Stretch="Uniform"
               Margin="16"/>
                    </Border>

                    <!-- Texto del anuncio con ScrollViewer invisible -->
                    <Border Grid.Row="1"
            Background="#1E293B"
            CornerRadius="12"
            BorderBrush="#334155"
            BorderThickness="1"
            Padding="20,18">

                        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                     HorizontalScrollBarVisibility="Disabled"
                     CanContentScroll="True">
                            <StackPanel>
                                <!-- Texto principal del anuncio -->
                                <TextBlock x:Name="AnnouncementTextBlock"
                          Text="Loading announcement..."
                          FontSize="14"
                          Foreground="#E2E8F0"
                          TextWrapping="Wrap"
                          LineHeight="22"
                          TextAlignment="Left"
                          VerticalAlignment="Top"/>

                                <!-- Separador (visible solo cuando hay frase/versículo) -->
                                <TextBlock x:Name="SeparatorText"
                          Text="━━━━━━━━━━━━━━━━━━━━"
                          FontSize="12"
                          Foreground="#475569"
                          TextAlignment="Center"
                          Margin="0,16,0,16"
                          Visibility="Collapsed"/>

                                <!-- Frase filosófica o versículo -->
                                <TextBlock x:Name="PhilosophicalOrScriptureText"
                          FontSize="13"
                          Foreground="#94A3B8"
                          FontStyle="Italic"
                          TextWrapping="Wrap"
                          LineHeight="20"
                          TextAlignment="Center"
                          Visibility="Collapsed"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <!-- Footer con botón -->
                <Border Grid.Row="2"
                        Background="#1E293B"
                        CornerRadius="0,0,16,16"
                        Padding="0,16,0,20"
                        BorderBrush="#334155"
                        BorderThickness="0,1,0,0">
                    <Button x:Name="CloseButton"
                            Content="Close"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- VISTA DE CONFIGURACIÓN -->
            <Grid x:Name="SettingsView" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header de Settings -->
                <Border Grid.Row="0"
                        Background="#1E293B"
                        CornerRadius="16,16,0,0"
                        Padding="20,24">

                    <Grid>
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center">
                            <TextBlock x:Name="SettingsHeaderText"
                                      Text="⚙️ Settings"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Botón de volver -->
                        <Button x:Name="BackButton"
                                Content="←"
                                FontSize="24"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Width="36"
                                Height="36"
                                Cursor="Hand"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="BackButton_Click"/>
                    </Grid>
                </Border>

                <!-- Opciones de configuración -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             Margin="24,20,24,20">
                    <StackPanel>
                        <!-- Opción 1: Show announcements (bloqueada) -->
                        <Border Background="#1E293B"
                                CornerRadius="12"
                                Padding="20,16"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="ShowAnnouncementsToggle"
                                         Grid.Row="0"
                                         Style="{StaticResource ToggleSwitchStyle}"
                                         IsChecked="True"
                                         Opacity="0.5"
                                         Click="ShowAnnouncementsToggle_Click">
                                    <TextBlock x:Name="ShowAnnouncementsText"
                                              Text="Show new announcements on startup"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="White"/>
                                </CheckBox>

                                <TextBlock Grid.Row="1"
                                          x:Name="ShowAnnouncementsDesc"
                                          Text="Display announcements when toolkit starts"
                                          FontSize="12"
                                          Foreground="#94A3B8"
                                          Margin="0,8,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Opción 2: Customize Background -->
                        <Border Background="#1E293B"
        CornerRadius="12"
        Padding="20,16"
        Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="CustomBackgroundToggle"
                 Grid.Row="0"
                 Style="{StaticResource ToggleSwitchStyle}"
                 Checked="CustomBackgroundToggle_Changed"
                 Unchecked="CustomBackgroundToggle_Changed">
                                    <TextBlock x:Name="CustomBackgroundText"
                      Text="Customize Announcement Background"
                      FontSize="14"
                      FontWeight="Medium"
                      Foreground="White"/>
                                </CheckBox>

                                <TextBlock Grid.Row="1"
                  x:Name="CustomBackgroundDesc"
                  Text="Change the background color of announcements"
                  FontSize="12"
                  Foreground="#94A3B8"
                  Margin="0,8,0,0"/>

                                <StackPanel Grid.Row="2" 
                   x:Name="ColorPickerPanel"
                   Visibility="Collapsed"
                   Margin="0,16,0,0">

                                    <!-- Preview del color -->
                                    <Border x:Name="ColorPreview"
                    Height="50"
                    CornerRadius="8"
                    Background="#0F172A"
                    BorderBrush="#475569"
                    BorderThickness="1"
                    Margin="0,0,0,12">
                                        <TextBlock x:Name="ColorHexText"
                          Text="#0F172A"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Slider RED -->
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                          Text="R"
                          FontSize="13"
                          FontWeight="SemiBold"
                          Foreground="#EF4444"
                          VerticalAlignment="Center"/>

                                        <Slider Grid.Column="1"
                       x:Name="RedSlider"
                       Minimum="0"
                       Maximum="255"
                       Value="15"
                       TickFrequency="1"
                       IsSnapToTickEnabled="True"
                       Margin="8,0"
                       ValueChanged="ColorSlider_ValueChanged"/>

                                        <TextBlock Grid.Column="2"
                          x:Name="RedValue"
                          Text="15"
                          FontSize="12"
                          Foreground="#94A3B8"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Slider GREEN -->
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                          Text="G"
                          FontSize="13"
                          FontWeight="SemiBold"
                          Foreground="#10B981"
                          VerticalAlignment="Center"/>

                                        <Slider Grid.Column="1"
                       x:Name="GreenSlider"
                       Minimum="0"
                       Maximum="255"
                       Value="23"
                       TickFrequency="1"
                       IsSnapToTickEnabled="True"
                       Margin="8,0"
                       ValueChanged="ColorSlider_ValueChanged"/>

                                        <TextBlock Grid.Column="2"
                          x:Name="GreenValue"
                          Text="23"
                          FontSize="12"
                          Foreground="#94A3B8"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Slider BLUE -->
                                    <Grid Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                          Text="B"
                          FontSize="13"
                          FontWeight="SemiBold"
                          Foreground="#3B82F6"
                          VerticalAlignment="Center"/>

                                        <Slider Grid.Column="1"
                       x:Name="BlueSlider"
                       Minimum="0"
                       Maximum="255"
                       Value="42"
                       TickFrequency="1"
                       IsSnapToTickEnabled="True"
                       Margin="8,0"
                       ValueChanged="ColorSlider_ValueChanged"/>

                                        <TextBlock Grid.Column="2"
                          x:Name="BlueValue"
                          Text="42"
                          FontSize="12"
                          Foreground="#94A3B8"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Opción 3: Philosophical Mode -->
                        <Border Background="#1E293B"
                                CornerRadius="12"
                                Padding="20,16"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="PhilosophicalModeToggle"
                                         Grid.Row="0"
                                         Style="{StaticResource ToggleSwitchStyle}"
                                         Checked="PhilosophicalModeToggle_Changed"
                                         Unchecked="PhilosophicalModeToggle_Changed">
                                    <TextBlock x:Name="PhilosophicalModeText"
                                              Text="Philosophical Mode"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="White"/>
                                </CheckBox>

                                <TextBlock Grid.Row="1"
                                          x:Name="PhilosophicalModeDesc"
                                          Text="Show motivational phrases with announcements"
                                          FontSize="12"
                                          Foreground="#94A3B8"
                                          Margin="0,8,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Opción 4: Scripture Mode -->
                        <Border Background="#1E293B"
                                CornerRadius="12"
                                Padding="20,16"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="ScriptureModeToggle"
                                         Grid.Row="0"
                                         Style="{StaticResource ToggleSwitchStyle}"
                                         Checked="ScriptureModeToggle_Changed"
                                         Unchecked="ScriptureModeToggle_Changed">
                                    <TextBlock x:Name="ScriptureModeText"
                                              Text="Scripture Mode"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="White"/>
                                </CheckBox>

                                <TextBlock Grid.Row="1"
                                          x:Name="ScriptureModeDesc"
                                          Text="Show Bible verses with announcements"
                                          FontSize="12"
                                          Foreground="#94A3B8"
                                          Margin="0,8,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Opción 5: Everyday Scripture -->
                        <Border Background="#1E293B"
                                CornerRadius="12"
                                Padding="20,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="EverydayScriptureToggle"
                                         Grid.Row="0"
                                         Style="{StaticResource ToggleSwitchStyle}"
                                         Checked="EverydayScriptureToggle_Changed"
                                         Unchecked="EverydayScriptureToggle_Changed">
                                    <TextBlock x:Name="EverydayScriptureText"
                                              Text="Everyday Scripture"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="White"/>
                                </CheckBox>

                                <TextBlock Grid.Row="1"
                                          x:Name="EverydayScriptureDesc"
                                          Text="Always show a daily verse, even if announcements are disabled"
                                          FontSize="12"
                                          Foreground="#94A3B8"
                                          Margin="0,8,0,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer de Settings -->
                <Border Grid.Row="2"
                        Background="#1E293B"
                        CornerRadius="0,0,16,16"
                        Padding="0,16,0,20"
                        BorderBrush="#334155"
                        BorderThickness="0,1,0,0">
                    <Button x:Name="SaveSettingsButton"
                            Content="Save"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="SaveSettingsButton_Click"
                            HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>