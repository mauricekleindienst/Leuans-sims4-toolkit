<Window x:Class="ModernDesign.MVVM.View.RepairLoggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leuan | Game Integrity Checker" 
        Height="604" Width="770"
        MinHeight="600" MinWidth="800"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="/Icono_TLK.ico">

    <Border x:Name="MainBorder" CornerRadius="12" MouseLeftButtonDown="MainBorder_MouseLeftButtonDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="150"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Padding="12,10" Background="#10FFFFFF" CornerRadius="10" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock x:Name="HeaderText" 
                               Text="🔍 Verificador de Integridad del Juego" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>
                    <TextBlock x:Name="SubHeaderText" 
                               Text="Compara archivos con la base de datos oficial de Steam" 
                               Foreground="#94A3B8" 
                               FontSize="10" 
                               Margin="0,4,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Path Selector -->
            <Border Grid.Row="1" Padding="10,8" CornerRadius="10" Background="#10FFFFFF" Margin="0,0,0,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="📁" FontSize="12" VerticalAlignment="Center"/>
                        <TextBlock x:Name="PathLabelText" Text="Ubicación de The Sims 4" 
                                   Foreground="White" FontSize="11" 
                                   FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0,0,0"
                                   TextWrapping="Wrap"/>
                        <TextBlock x:Name="StatusText" Text="  (Buscando...)" 
                                   Foreground="#F59E0B" FontSize="9" VerticalAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="150"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#15FFFFFF" CornerRadius="6" Padding="6,5">
                            <TextBlock x:Name="PathTextBlock" Text="Detectando..." 
                                       Foreground="#94A3B8" FontSize="10" VerticalAlignment="Center" 
                                       TextTrimming="CharacterEllipsis"/>
                        </Border>

                        <Button x:Name="BrowseBtn" Grid.Column="1" Content="Buscar" Margin="5,0,0,0"
                                Background="#30FFFFFF" Foreground="White" FontWeight="SemiBold"
                                Padding="8,5" FontSize="10" Cursor="Hand"
                                Click="BrowseBtn_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#3EC7E8"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <!-- Configuration Button -->
            <Button x:Name="ConfigureBtn" 
                    Grid.Row="2"
                    Content="⚙️ Configurar Escaneo"
                    Height="40"
                    Background="#8B5CF6"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="11"
                    Cursor="Hand"
                    Visibility="Collapsed"
                    Margin="0,0,0,8"
                    Click="ConfigureBtn_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="10,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#A78BFA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <CheckBox x:Name="IncludeCrackedCheckBox" 
          Content="Include Game-Cracked files in scan"
          Foreground="#F8FAFC"
          FontSize="12"
          Margin="0,10,0,0"
          VerticalAlignment="Center"
          Visibility="Collapsed"/>

            <!-- Progress Panel -->
            <StackPanel x:Name="ProgressPanel" Grid.Row="3" Visibility="Collapsed" Margin="0,0,0,8">
                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock x:Name="ProgressText" Text="Escaneando..." Foreground="White" FontSize="10" TextWrapping="Wrap"/>
                        <TextBlock x:Name="CurrentFileText" Text="" Foreground="#94A3B8" FontSize="9" 
                                   Margin="8,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <TextBlock x:Name="ProgressPercent" Grid.Column="1" Text="0%" Foreground="#3EC7E8" 
                               FontSize="10" Margin="5,0,0,0"/>
                </Grid>

                <Border Height="5" CornerRadius="2.5" Background="#20FFFFFF" Margin="0,0,0,4">
                    <Border x:Name="ProgressBar" HorizontalAlignment="Left" Width="0" 
                            CornerRadius="2.5">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#3EC7E8" Offset="0"/>
                                <GradientStop Color="#0A6BF2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="📊 " FontSize="9" VerticalAlignment="Center"/>
                        <TextBlock x:Name="StatsText" Text="Archivos: 0" 
                                   Foreground="#E5E7EB" FontSize="9" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock x:Name="SpeedLabel" Text="Vel:" Foreground="#94A3B8" FontSize="9"/>
                        <TextBlock x:Name="SpeedText" Text="0 MB/s" Foreground="#E5E7EB" FontSize="9" Margin="3,0,8,0"/>

                        <TextBlock x:Name="EtaLabel" Text="ETA:" Foreground="#94A3B8" FontSize="9"/>
                        <TextBlock x:Name="EtaText" Text="--:--" Foreground="#E5E7EB" FontSize="9" Margin="3,0,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Log -->
            <Border Grid.Row="4" Background="#10FFFFFF" CornerRadius="10" Padding="8">
                <ScrollViewer x:Name="LogScroller" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#E5E7EB"
                             FontSize="9"
                             FontFamily="Consolas"
                             IsReadOnly="True"
                             TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>

            <!-- Buttons -->
            <Grid Grid.Row="5" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CancelBtn" 
                        Grid.Column="0"
                        Content="❌ Cancelar"
                        Height="38"
                        Background="#30FFFFFF"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="11"
                        Cursor="Hand"
                        Click="CancelBtn_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="12,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#40FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="StartBtn" 
                        Grid.Column="2"
                        Content="🔍 Iniciar Escaneo"
                        Height="38"
                        Background="#0A6BF2"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="11"
                        Cursor="Hand"
                        IsEnabled="False"
                        Click="StartBtn_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="12,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#3EC7E8"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="bg" Property="Background" Value="#404040"/>
                                    <Setter Property="Foreground" Value="#808080"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>