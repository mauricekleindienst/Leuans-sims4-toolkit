<Window x:Class="ModernDesign.MVVM.View.ExclusionManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Exclusions" 
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Border Background="#1F2937" CornerRadius="12" BorderBrush="#374151" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Opacity="0.5" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="#111827" CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="20,0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="TitleText" Text="⚙️ Manage Exclusions" 
                                   Foreground="White" FontSize="18"
                                   FontWeight="Bold" FontFamily="Bahnschrift Light"/>
                        <TextBlock x:Name="SubtitleText" 
                                   Text="Files that will never be renamed"
                                   Foreground="#9CA3AF" FontSize="11"
                                   FontFamily="Bahnschrift Light"/>
                    </StackPanel>

                    <Button Content="✕" HorizontalAlignment="Right"
                            Width="35" Height="35"
                            Background="Transparent" Foreground="White"
                            BorderThickness="0" FontSize="16"
                            Click="CloseButton_Click" Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- EXCLUSION LIST -->
            <Border Grid.Row="1" Background="#111827" Margin="20" CornerRadius="8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ExclusionListPanel" Margin="10"/>
                </ScrollViewer>
            </Border>

            <!-- FOOTER -->
            <Border Grid.Row="2" Background="#1F2937" Padding="20,15" CornerRadius="0,0,12,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="SaveBtn" Content="Save"
                            Background="#22C55E" Foreground="White"
                            FontWeight="Bold" FontSize="12"
                            Padding="20,8" Cursor="Hand"
                            BorderThickness="0"
                            Click="SaveBtn_Click" Margin="0,0,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="CancelBtn" Content="Cancel"
                            Background="#6B7280" Foreground="White"
                            FontWeight="Bold" FontSize="12"
                            Padding="20,8" Cursor="Hand"
                            BorderThickness="0"
                            Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
