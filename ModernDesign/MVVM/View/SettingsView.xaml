<UserControl x:Class="ModernDesign.MVVM.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="519"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>

        <!-- Modern Title Style -->
        <Style x:Key="TitleTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <!-- Subtle Body Text -->
        <Style x:Key="BodyTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D0D0D0"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <!-- Premium Card Style with Glassmorphism -->
        <Style x:Key="SettingsCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.03"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#10FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Modern ComboBox with BLACK text -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Grid.Column="2"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="12,8"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1"
                                                         Text="▼"
                                                         FontSize="10"
                                                         Foreground="#000000"
                                                         Margin="0,0,12,0"
                                                         VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#80FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="12,8"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                 Placement="Bottom"
                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True"
                                 Focusable="False"
                                 PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        Background="#FFFFFF"
                                        BorderBrush="#60FFFFFF"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="200">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.3" Color="Black"/>
                                    </Border.Effect>
                                    <ScrollViewer Margin="4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style with BLACK text -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                Margin="2">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                <Setter Property="Foreground" Value="#000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Modern Action Button -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="#40FFFFFF"
                                BorderThickness="1"
                                CornerRadius="6" 
                                Padding="16,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#FFFFFF" Opacity="0.08"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush" Value="#60FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#FFFFFF" Opacity="0.12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Container -->
        <Style x:Key="IconContainer" TargetType="Border">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.05"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#20FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="-26,0,0,0" Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Hidden" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="3"
                          PanningMode="VerticalOnly"
                          CanContentScroll="True">
            <StackPanel Margin="32,20,32,30">

                <!-- HEADER -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock x:Name="TitleText"
                               Text="Settings"
                               Style="{StaticResource TitleTextBlock}"
                               FontSize="34"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="SubtitleText" 
                               Text="Configure your preferences and view system status"
                               Style="{StaticResource BodyTextBlock}"
                               FontSize="14"/>
                </StackPanel>

                <!-- APPEARANCE SECTION -->
                <TextBlock x:Name="AppearanceSectionTitle"
                           Text="APPEARANCE" 
                           Style="{StaticResource BodyTextBlock}"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#F472B6"
                           Margin="0,0,0,12"/>

                <!-- Theme Selector Card -->
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" Margin="0,0,16,0"
                                Background="#831843" BorderBrush="#F472B6" BorderThickness="1">
                            <TextBlock Text="🎨" FontSize="22" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="ThemeLabel"
                                       Text="UI Theme"
                                       Style="{StaticResource TitleTextBlock}"
                                       FontSize="14"/>
                            <TextBlock x:Name="ThemeDesc" 
                                       Text="Customize the color scheme of the application"
                                       Style="{StaticResource BodyTextBlock}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <Button x:Name="ChangeThemeBtn"
                                Grid.Column="2"
                                Content="Change Theme"
                                Style="{StaticResource ActionButton}"
                                Click="ChangeThemeBtn_Click"/>
                    </Grid>
                </Border>

                <!-- LANGUAGE SECTION -->
                <TextBlock x:Name="LanguageSectionTitle"
                           Text="LANGUAGE" 
                           Style="{StaticResource BodyTextBlock}"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#38BDF8"
                           Margin="0,20,0,12"/>

                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" Margin="0,0,16,0"
                                Background="#1E3A8A" BorderBrush="#3B82F6" BorderThickness="1">
                            <TextBlock Text="🌐" FontSize="22" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="LanguageLabel"
                                       Text="Application Language"
                                       Style="{StaticResource TitleTextBlock}"
                                       FontSize="14"/>
                            <TextBlock x:Name="LanguageDesc" 
                                       Text="Change the display language of the application"
                                       Style="{StaticResource BodyTextBlock}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <ComboBox x:Name="LanguageComboBox" 
                                  Grid.Column="2"
                                  Width="180" 
                                  Height="36"
                                  Style="{StaticResource ComboBoxStyle}"
                                  SelectionChanged="LanguageComboBox_SelectionChanged" Background="#FF2D2828">
                            <ComboBoxItem Content="🇺🇸  English (US)" Tag="en-US"/>
                            <ComboBoxItem Content="🇪🇸  Español (ES)" Tag="es-ES"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- SYSTEM STATUS SECTION -->
                <TextBlock x:Name="StatusSectionTitle"
                           Text="SYSTEM STATUS" 
                           Style="{StaticResource BodyTextBlock}"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#A78BFA"
                           Margin="0,20,0,12"/>

                <!-- DLC Status Card -->
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" Margin="0,0,16,0"
                                Background="#065F46" BorderBrush="#10B981" BorderThickness="1">
                            <TextBlock Text="📦" FontSize="22" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="DLCStatusTitle"
                                       Text="Installed DLCs"
                                       Style="{StaticResource TitleTextBlock}"
                                       FontSize="14"/>
                            <TextBlock x:Name="DLCStatusDesc"
                                       Text="Scanning..."
                                       Style="{StaticResource BodyTextBlock}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <Border x:Name="DLCBadge"
                                Grid.Column="2"
                                Style="{StaticResource StatusBadge}">
                            <TextBlock x:Name="DLCCount"
                                       Text="--"
                                       Foreground="#4ADE80"
                                       FontFamily="Bahnschrift Light"
                                       FontWeight="SemiBold"
                                       FontSize="14"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- DLC Unlocker Status Card -->
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" Margin="0,0,16,0"
                                Background="#581C87" BorderBrush="#A855F7" BorderThickness="1">
                            <TextBlock Text="🔓" FontSize="22" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="UnlockerStatusTitle"
                                       Text="EA DLC Unlocker"
                                       Style="{StaticResource TitleTextBlock}"
                                       FontSize="14"/>
                            <TextBlock x:Name="UnlockerStatusDesc"
                                       Text="Checking installation..."
                                       Style="{StaticResource BodyTextBlock}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <Border x:Name="UnlockerBadge"
                                Grid.Column="2"
                                Style="{StaticResource StatusBadge}">
                            <TextBlock x:Name="UnlockerStatus"
                                       Text="..."
                                       Foreground="#E5E7EB"
                                       FontFamily="Bahnschrift Light"
                                       FontWeight="SemiBold"
                                       FontSize="12"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Launcher Version Card -->
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" Margin="0,0,16,0"
                                Background="#1E40AF" BorderBrush="#60A5FA" BorderThickness="1">
                            <TextBlock Text="🚀" FontSize="22" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="VersionTitle"
                                       Text="Launcher Version"
                                       Style="{StaticResource TitleTextBlock}"
                                       FontSize="14"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock x:Name="CurrentVersionLabel"
                                           Text="Current: "
                                           Style="{StaticResource BodyTextBlock}"
                                           FontSize="12"/>
                                <TextBlock x:Name="CurrentVersion"
                                           Text="1.4.0"
                                           Foreground="#93C5FD"
                                           FontFamily="Bahnschrift Light"
                                           FontWeight="SemiBold"
                                           FontSize="12"/>
                                <TextBlock Text="  •  "
                                           Foreground="#505050"
                                           FontSize="12"
                                           Margin="4,0"/>
                                <TextBlock x:Name="LatestVersionLabel"
                                           Text="Latest: "
                                           Style="{StaticResource BodyTextBlock}"
                                           FontSize="12"/>
                                <TextBlock x:Name="LatestVersion"
                                           Text="..."
                                           Foreground="#B0B0B0"
                                           FontFamily="Bahnschrift Light"
                                           FontWeight="SemiBold"
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <Border x:Name="VersionBadge"
                                Grid.Column="2"
                                Style="{StaticResource StatusBadge}">
                            <TextBlock x:Name="VersionStatus"
                                       Text="Checking..."
                                       Foreground="#E5E7EB"
                                       FontFamily="Bahnschrift Light"
                                       FontWeight="SemiBold"
                                       FontSize="11"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- PERFORMANCE SECTION -->
                <TextBlock x:Name="PerformanceSectionTitle"
                           Text="PERFORMANCE" 
                           Style="{StaticResource BodyTextBlock}"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#FCD34D"
                           Margin="0,20,0,12"/>

                <!-- Preload Images Card -->
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" Margin="0,0,16,0"
                                Background="#92400E" BorderBrush="#FBBF24" BorderThickness="1">
                            <TextBlock Text="⚡" FontSize="22" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="PreloadImagesLabel"
                                       Text="Preload Images on Startup"
                                       Style="{StaticResource TitleTextBlock}"
                                       FontSize="14"/>
                            <TextBlock x:Name="PreloadImagesDesc" 
                                       Text="Load DLC images during startup (increases RAM usage but improves responsiveness)"
                                       Style="{StaticResource BodyTextBlock}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <CheckBox x:Name="PreloadImagesCheckBox"
                                  Grid.Column="2"
                                  VerticalAlignment="Center"
                                  Checked="PreloadImagesCheckBox_Changed"
                                  Unchecked="PreloadImagesCheckBox_Changed">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Border x:Name="border"
                                                        Width="48" Height="24"
                                                        CornerRadius="12"
                                                        Background="#30FFFFFF"
                                                        BorderBrush="#20FFFFFF"
                                                        BorderThickness="1">
                                                    <Border x:Name="thumb"
                                                            Width="18" Height="18"
                                                            CornerRadius="9"
                                                            Background="#FFFFFF"
                                                            HorizontalAlignment="Left"
                                                            Margin="3,0,0,0">
                                                        <Border.Effect>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.3" Color="Black"/>
                                                        </Border.Effect>
                                                    </Border>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                                                        <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter TargetName="thumb" Property="Margin" Value="0,0,3,0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </Border>

                <!-- Load DLC Images Card -->
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" Margin="0,0,16,0"
                                Background="#BE185D" BorderBrush="#F472B6" BorderThickness="1">
                            <TextBlock Text="🖼️" FontSize="22" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="LoadDLCImagesLabel"
                                       Text="Load DLC Images"
                                       Style="{StaticResource TitleTextBlock}"
                                       FontSize="14"/>
                            <TextBlock x:Name="LoadDLCImagesDesc" 
                                       Text="Display DLC cover images in the updater (may consume up to 1GB of RAM)"
                                       Style="{StaticResource BodyTextBlock}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <CheckBox x:Name="LoadDLCImagesCheckBox"
                                  Grid.Column="2"
                                  VerticalAlignment="Center"
                                  Checked="LoadDLCImagesCheckBox_Changed"
                                  Unchecked="LoadDLCImagesCheckBox_Changed">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Border x:Name="border"
                                                        Width="48" Height="24"
                                                        CornerRadius="12"
                                                        Background="#30FFFFFF"
                                                        BorderBrush="#20FFFFFF"
                                                        BorderThickness="1">
                                                    <Border x:Name="thumb"
                                                            Width="18" Height="18"
                                                            CornerRadius="9"
                                                            Background="#FFFFFF"
                                                            HorizontalAlignment="Left"
                                                            Margin="3,0,0,0">
                                                        <Border.Effect>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.3" Color="Black"/>
                                                        </Border.Effect>
                                                    </Border>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                                                        <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter TargetName="thumb" Property="Margin" Value="0,0,3,0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </Border>

                <!-- QUICK ACTIONS -->
                <TextBlock x:Name="ActionsSectionTitle"
                           Text="QUICK ACTIONS" 
                           Style="{StaticResource BodyTextBlock}"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#FB923C"
                           Margin="0,20,0,12"/>

                <Border Style="{StaticResource SettingsCard}">
                    <WrapPanel>
                        <Button x:Name="RefreshBtn" 
                                Content="🔄 Refresh Status"
                                Style="{StaticResource ActionButton}"
                                Margin="0,0,10,10"
                                Click="RefreshBtn_Click"/>
                        <Button x:Name="OpenFolderBtn" 
                                Content="📁 Open Data Folder"
                                Style="{StaticResource ActionButton}"
                                Margin="0,0,10,10"
                                Click="OpenFolderBtn_Click"/>
                        <Button x:Name="ResetBtn" 
                                Content="🔧 Reset Settings"
                                Style="{StaticResource ActionButton}"
                                Margin="0,0,10,10"
                                Click="ResetBtn_Click"/>
                    </WrapPanel>
                </Border>

                <!-- APP INFO -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,20,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Leuan's - Sims 4 ToolKit" 
                                   Style="{StaticResource TitleTextBlock}"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
