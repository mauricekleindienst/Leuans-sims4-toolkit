<Window x:Class="ModernDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModel="clr-namespace:ModernDesign.MVVM.ViewModel"
        xmlns:view="clr-namespace:ModernDesign.MVVM.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernDesign"
        xmlns:shell="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        mc:Ignorable="d"
        Title="Leuan's - Sims 4 ToolKit"
        MinHeight="600" MinWidth="1024"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="/IconoEjecutable.ico"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="50"
            ResizeBorderThickness="6"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- PALETA DE COLORES -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#6366F1"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#22D3EE"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="SurfaceLightBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>

        <!-- GRADIENTES -->
        <LinearGradientBrush x:Key="MainGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00D9FF" Offset="0"/>
            <GradientStop Color="#0A0E1A" Offset="0.5"/>
            <GradientStop Color="#1a4d5e" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#6366F1" Offset="0"/>
            <GradientStop Color="#8B5CF6" Offset="0.5"/>
            <GradientStop Color="#22D3EE" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GlowGradient" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#206366F1" Offset="0"/>
            <GradientStop Color="#00000000" Offset="1"/>
        </LinearGradientBrush>

        <!-- ESTILO BOTÓN MENÚ -->
        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Border x:Name="Bg" 
                                    Background="Transparent" 
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="Indicator" 
                                    Height="3" 
                                    VerticalAlignment="Bottom"
                                    Margin="8,0,8,4"
                                    CornerRadius="2"
                                    Opacity="0"
                                    Background="{StaticResource AccentGradient}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                <Setter TargetName="Indicator" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO BOTÓN VENTANA -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#20FFFFFF"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" Background="Transparent" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#E11D48"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- CONTENEDOR PRINCIPAL -->
    <Border x:Name="MainBackgroundBorder" CornerRadius="16" Background="{StaticResource MainGradient}">

        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Efecto de brillo superior -->
            <Border Grid.RowSpan="2" CornerRadius="16,16,0,0" Height="200" VerticalAlignment="Top" 
                    Background="{StaticResource GlowGradient}" IsHitTestVisible="False"/>

            <!-- HEADER -->
            <Border Grid.Row="0" Padding="20,16,20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo + Título -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="42" Height="42" CornerRadius="10" Margin="0,0,14,0">
                            <Image Source="/logo.png" Margin="-10,-5,-9,-4" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Leuan's - Sims 4 ToolKit" 
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="14" FontWeight="Bold" FontFamily="Segoe UI" Margin="-13,0,10,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Navegación Central -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                shell:WindowChrome.IsHitTestVisibleInChrome="True">

                        <RadioButton Content="🏠  Home"
                                     Style="{StaticResource NavButtonStyle}"
                                     IsChecked="True"
                                     Command="{Binding HomeViewCommand}"/>

                        <RadioButton Content="🔍  Discovery"
                                     Style="{StaticResource NavButtonStyle}"
                                     Command="{Binding DiscoveryViewCommand}"/>

                        <RadioButton Content="⚡  FPS Booster"
                                     Style="{StaticResource NavButtonStyle}"
                                     Command="{Binding FPSBoosterViewCommand}"/>

                        <RadioButton Content="👥  Social"
                                     Style="{StaticResource NavButtonStyle}"
                                     Command="{Binding SocialViewCommand}"/>

                        <RadioButton Content="⚙️  Settings"
                                     Style="{StaticResource NavButtonStyle}"
                                     Command="{Binding SettingsViewCommand}"/>

                    </StackPanel>

                    <!-- Botones de Ventana -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Top"
                                Margin="0,-4,-8,0"
                                shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Style="{StaticResource WindowButtonStyle}" Click="MinimizeButton_Click">
                            <TextBlock Text="─" FontSize="12"/>
                        </Button>
                        <Button Style="{StaticResource WindowButtonStyle}" Click="MaximizeButton_Click">
                            <TextBlock Text="☐" FontSize="11"/>
                        </Button>
                        <Button Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click">
                            <TextBlock Text="✕" FontSize="11"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CONTENIDO DINÁMICO + CHATBOT -->
            <Grid Grid.Row="1" Margin="16,0,16,16">

                <!-- Contenido principal -->
                <Border CornerRadius="12"
                        Background="#08FFFFFF"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <ContentControl Content="{Binding CurrentView}" Margin="0"/>
                </Border>

                <!-- CHATBOT FLOTANTE (RESPONSIVE) -->
                <Canvas x:Name="ChatbotContainer" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Panel.ZIndex="1000">

                    <!-- TOOLTIP FLOTANTE CON GIF Y MENSAJE -->
                    <!-- TOOLTIP FLOTANTE CON VIDEO Y MENSAJE -->
                    <!-- TOOLTIP FLOTANTE CON VIDEO Y MENSAJE -->
                    <Border x:Name="ChatbotTooltip"
        Canvas.Right="90"
        Canvas.Bottom="90"
        MaxWidth="280"
        CornerRadius="16"
        Background="#1E293B"
        Visibility="Collapsed"
        BorderBrush="#3B82F6"
        BorderThickness="2"
        Padding="15"
        shell:WindowChrome.IsHitTestVisibleInChrome="True">

                        <Border.Effect>
                            <DropShadowEffect Color="#3B82F6" BlurRadius="25" ShadowDepth="0" Opacity="0.8"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- VIDEO del robot -->
                            <MediaElement x:Name="RobotVideo" 
                      Width="80" 
                      Height="80"
                      Margin="0,0,0,10"
                      HorizontalAlignment="Center"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual"
                      Stretch="Uniform"
                      MediaEnded="RobotVideo_MediaEnded"/>

                            <!-- Texto flotante aesthetic -->
                            <TextBlock x:Name="TooltipText"
                   Text="Hi! I'm the Virtual Assistance that Leuan has chosen for you! Please press the bubble below to open the Chatbot!"
                   Foreground="White"
                   FontSize="13"
                   FontFamily="Bahnschrift Light"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   LineHeight="18">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#22D3EE" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Botón circular flotante (50px) -->
                    <Border x:Name="ChatbotButton"
                            Canvas.Right="25"
                            Canvas.Bottom="25"
                            Width="50" Height="50"
                            CornerRadius="25"
                            Background="#3B82F6"
                            Cursor="Hand"
                            MouseLeftButtonDown="ChatbotButton_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">

                        <Border.Effect>
                            <DropShadowEffect Color="#3B82F6" BlurRadius="20" ShadowDepth="0" Opacity="0.7"/>
                        </Border.Effect>

                        <Grid>
                            <TextBlock Text="💬" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"/>

                            <!-- Badge de notificación -->
                            <Border Width="16" Height="16"
                                    CornerRadius="8"
                                    Background="#EF4444"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,-4,-4,0">
                                <TextBlock Text="?" 
                                           FontSize="10" 
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Ventana del chatbot (responsive, anclada al botón) -->
                    <Border x:Name="ChatbotWindow"
                            Canvas.Right="25"
                            Canvas.Bottom="90"
                            MaxWidth="400"
                            MinWidth="320"
                            MaxHeight="550"
                            MinHeight="400"
                            CornerRadius="16"
                            Background="#1E293B"
                            Visibility="Collapsed"
                            BorderBrush="#3B82F6"
                            BorderThickness="2"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">

                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header del chatbot -->
                            <Border Grid.Row="0" Background="#3B82F6" CornerRadius="16,16,0,0">
                                <Grid>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                        <TextBlock Text="🤖" FontSize="28" Margin="0,0,12,0">
                                            <TextBlock.Foreground>
                                                <SolidColorBrush Color="#1E293B"/>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <StackPanel>
                                            <TextBlock x:Name="ChatbotTitle" 
                           Text="Asistente de Ayuda" 
                           Foreground="White" 
                           FontSize="17" 
                           FontWeight="Bold"
                           FontFamily="Bahnschrift Light"/>
                                            <TextBlock x:Name="ChatbotSubtitle" 
                           Text="¿En qué puedo ayudarte?" 
                           Foreground="#E0E7FF" 
                           FontSize="12"
                           FontFamily="Bahnschrift Light"
                           Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Botón de configuración (ruedita) CON GLOW AMARILLO -->
                                    <Button x:Name="SettingsButton"
                Content="⚙️" 
                Width="32" Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,52,0"
                Background="Transparent"
                Foreground="White"
                BorderThickness="0"
                FontSize="16"
                Cursor="Hand"
                Click="ChatbotSettings_Click"
                Loaded="SettingsButton_Loaded">
                                        <Button.Effect>
                                            <DropShadowEffect x:Name="SettingsGlow" 
                                  Color="#FFD700" 
                                  BlurRadius="15" 
                                  ShadowDepth="0" 
                                  Opacity="0.8"/>
                                        </Button.Effect>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                        CornerRadius="16"
                                        Width="32" Height="32">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="✕" 
                Width="32" Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,15,0"
                Background="Transparent"
                Foreground="White"
                BorderThickness="0"
                FontSize="18"
                FontWeight="Bold"
                Cursor="Hand"
                Click="CloseChatbot_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                        CornerRadius="16"
                                        Width="32" Height="32">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- Área de mensajes -->
                            <ScrollViewer x:Name="ChatScrollViewer" 
                                          Grid.Row="1" 
                                          VerticalScrollBarVisibility="Auto"
                                          Padding="15"
                                          Background="#0F172A">
                                <StackPanel x:Name="ChatMessagesPanel"/>
                            </ScrollViewer>

                            <!-- Input del usuario -->
                            <Border Grid.Row="2" 
                                    Background="#0A0E1A" 
                                    Padding="15"
                                    CornerRadius="0,0,16,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="ChatInputBox"
                                             Grid.Column="0"
                                             Background="#1E293B"
                                             Foreground="White"
                                             BorderBrush="#475569"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             FontSize="13"
                                             FontFamily="Bahnschrift Light"
                                             VerticalContentAlignment="Center"
                                             KeyDown="ChatInput_KeyDown">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="8"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>

                                    <Button x:Name="SendButton"
                                            Grid.Column="1"
                                            Content="Enviar"
                                            Width="70"
                                            Height="36"
                                            Margin="10,0,0,0"
                                            Background="#3B82F6"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontSize="12"
                                            FontWeight="Bold"
                                            FontFamily="Bahnschrift Light"
                                            Cursor="Hand"
                                            Click="SendMessage_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="8"
                                                                    Padding="10,8">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2563EB"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Canvas>

            </Grid>
        </Grid>
    </Border>
</Window>