<Window x:Class="ModernDesign.MVVM.View.DLCUnlockerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        Title="EA DLC UNLOCKER"
        Height="700" Width="850"
        MinHeight="600" MinWidth="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize"
        Icon="/Icono_TLK - copia.ico"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="50"
                            ResizeBorderThickness="6"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Estilo para botones grandes -->
        <Style x:Key="BigActionButton" TargetType="Button">
            <Setter Property="Background" Value="#1A1F2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2A3F5F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252D3F"/>
                    <Setter Property="BorderBrush" Value="#10B981"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botones pequeños -->
        <Style x:Key="SmallActionButton" TargetType="Button">
            <Setter Property="Background" Value="#1A1F2E"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="BorderBrush" Value="#2A3F5F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252D3F"/>
                    <Setter Property="BorderBrush" Value="#10B981"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="0" Background="#0D1117">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.7" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" 
                    Background="#0D1117" 
                    BorderBrush="#1F2937" 
                    BorderThickness="0,0,0,1"
                    Padding="20,0">
                <Grid shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Icono de candado -->
                        <Border Width="24" Height="24" 
                                Background="#10B981" 
                                CornerRadius="4" 
                                Margin="0,0,12,0">
                            <TextBlock Text="🔓" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="EA DLC UNLOCKER" 
                                   Foreground="#10B981" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   FontFamily="Consolas, Courier New"
                                   VerticalAlignment="Center"/>

                        <TextBlock Text="v2.5" 
                                   Foreground="#6B7280" 
                                   FontSize="11" 
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Botones de ventana -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="BackBtn"
                                Content="−"
                                Width="40" Height="40"
                                Background="Transparent"
                                Foreground="#6B7280"
                                BorderThickness="0"
                                FontSize="20"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="BackBtn_Click"
                                ToolTip="Back">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1F2937"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="CloseBtn"
                                Content="×"
                                Width="40" Height="40"
                                Background="Transparent"
                                Foreground="#6B7280"
                                BorderThickness="0"
                                FontSize="24"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="CloseBtn_Click"
                                ToolTip="Close">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DC2626"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="30,30,30,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*" MinHeight="150"/>
                    </Grid.RowDefinitions>

                    <!-- STATUS CARD -->
                    <Border Grid.Row="0"
                            Background="#161B22"
                            BorderBrush="#2A3F5F"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="25">
                        <StackPanel>
                            <TextBlock Text="SYSTEM STATUS"
                                       Foreground="#6B7280"
                                       FontSize="11"
                                       FontFamily="Consolas"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8"/>

                            <TextBlock x:Name="StatusText"
                                       Text="Checking unlocker status..."
                                       Foreground="#10B981"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,4"/>
                        </StackPanel>
                    </Border>

                    <!-- ACTION BUTTONS GRID -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Install/Unlock Button -->
                        <Button x:Name="InstallBtn"
                                Grid.Column="0"
                                Content="Install EA DLC Unlocker"
                                Style="{StaticResource BigActionButton}"
                                Click="InstallBtn_Click"/>

                        <!-- Uninstall Button -->
                        <Button x:Name="UninstallBtn"
                                Grid.Column="2"
                                Content="Uninstall"
                                Style="{StaticResource BigActionButton}"
                                Click="UninstallBtn_Click"
                                Visibility="Collapsed"/>
                    </Grid>

                    <!-- HINT TEXT -->
                    <Border Grid.Row="4"
                            Background="#161B22"
                            BorderBrush="#2A3F5F"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                        <TextBlock x:Name="HintText"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   FontFamily="Consolas"
                                   TextWrapping="Wrap"
                                   Text="Click 'Install EA DLC Unlocker' to automatically download, extract, and configure everything."/>
                    </Border>

                    <!-- Activity Log -->
                    <Border Grid.Row="6"
                            Background="#0D1117"
                            BorderBrush="#1F2937"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Log Header -->
                            <Border Grid.Row="0" 
                                    Background="#161B22" 
                                    Padding="12,8"
                                    CornerRadius="8,8,0,0">
                                <TextBlock Text="ACTIVITY LOG"
                                           Foreground="#10B981"
                                           FontSize="11"
                                           FontFamily="Consolas"
                                           FontWeight="Bold"/>
                            </Border>

                            <!-- Log Content -->
                            <ScrollViewer Grid.Row="1" 
                                          VerticalScrollBarVisibility="Auto"
                                          Padding="12,8"
                                          MaxHeight="200">
                                <TextBlock x:Name="ActivityLog"
                                           Foreground="#10B981"
                                           FontSize="11"
                                           FontFamily="Consolas"
                                           TextWrapping="Wrap"
                                           Text="> Interface loaded."/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>

            <!-- FOOTER -->
            <Border Grid.Row="2" 
                    Background="#0D1117"
                    BorderBrush="#1F2937"
                    BorderThickness="0,1,0,0"
                    Padding="20,0">
                <Grid>
                    <TextBlock VerticalAlignment="Center">
                        <Hyperlink NavigateUri="https://leuan.zeroauno.com/sims4-toolkit/otherOS.html"
                                   RequestNavigate="OtherOS_RequestNavigate"
                                   Foreground="#6B7280"
                                   TextDecorations="None">
                            <Run Text="Using Linux / MacOS / SteamDeck? Click here!" FontSize="9" FontFamily="Consolas"/>
                        </Hyperlink>
                    </TextBlock>

                    <TextBlock Text="Designed by Leuan • 2026"
                               Foreground="#374151"
                               FontSize="9"
                               FontFamily="Consolas"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>